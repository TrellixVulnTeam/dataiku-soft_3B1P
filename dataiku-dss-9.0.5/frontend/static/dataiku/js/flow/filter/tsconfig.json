{
	"compilerOptions": {
		"declaration": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "compiled-js",
        "removeComments": true,
		"noImplicitAny": true,
        "sourceMap": true,
        "inlineSources": true,
        "isolatedModules": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"strictNullChecks": true
	},
	"compileOnSave": true,
	"include": [
		"third/**/*.ts", "*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
